<launch>

  <!-- Map server -->
  <arg name="map_file" default="$(find rom2109_slam)/maps/sithu.yaml"/>

  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- run a static tf between odom and map -->
  <!--node pkg="tf" type="static_transform_publisher" name="odom_map_broadcaster" args="0 0 0 0 0 0 /map /odom 100"/-->

  <arg name="initial_pose_x" default="1.368629"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_y" default="0.53971"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_a" default="0.0"/>

  <include file="$(find rom2109_slam)/launch/includes/amcl.launch.xml">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <include file="$(find rom2109_slam)/launch/includes/move_base.launch.xml"/>

</launch>
